{# 新建Modal #}
<div id="newModal" class="ui small modal" data-url="{{ path('cscv_app_token_new') }}">
    <i class="close icon"></i>

    <div class="header">
        新建Token
    </div>

    <div class="content">
        <form class="ui form" action="{{ path('cscv_app_token_new') }}" {{ form_enctype(newForm) }}
              method="POST">
            <div class="field">
                <label>{{ form_label(newForm.appName) }}</label>
                {{ form_widget(newForm.appName,{'attr':{'placeholder':'请填写应用名称'} }) }}
            </div>
            <div class="field">
                <label>{{ form_label(newForm.limit) }}</label>
                {{ form_widget(newForm.limit) }}
            </div>
            <div class="field" style="display: none;">
                {{ form_rest(newForm) }}
            </div>
        </form>
    </div>
    <div class="actions">
        <Button type="button" id="cancelAction" class="ui black button">
            取消
        </Button>
        <Button type="button" id="newAction" class="ui green button">
            创建
        </Button>
    </div>
</div>

{# 编辑Modal #}
<div id="editModal" class="ui small modal" data-url="{{ path('cscv_app_token_update') }}">
    <i class="close icon"></i>

    <div class="header">
        编辑Token
    </div>
    <div class="content">
        <form class="ui form" action="{{ path('cscv_app_token_new') }}" {{ form_enctype(editForm) }} method="POST">
            <div class="field">
                <label>{{ form_label(editForm.appName) }}</label>
                {{ form_widget(editForm.appName,{'attr':{'placeholder':'请填写应用名称'} }) }}
            </div>
            <div class="field">
                <label>{{ form_label(editForm.limit) }}</label>
                {{ form_widget(editForm.limit) }}

            </div>
            <div class="field" style="display: none;">
                {{ form_rest(editForm) }}
                {#存放修改Id#}
                <input type="hidden" id="token_id" name="token_id">
            </div>
        </form>
    </div>
    <div class="actions">
        <button id="cancelAction" class="ui black button">
            取消
        </button>
        <button id="updateAction"
                class="ui positive button">
            修改
        </button>
    </div>
</div>

{# 删除提示Modal #}
<div id="removeModal" class="ui small basic modal" data-url="{{ path('cscv_app_token_remove') }}">
    <i class="close icon"></i>

    <div class="header">
        确认删除
    </div>
    <div class="content">
        <div class="image">
            <i class="warning sign icon"></i>
        </div>
        <div class="description">
            <p>确认删除？该操作不可逆</p>
        </div>
    </div>
    <div class="actions">
        <div class="two fluid ui inverted buttons">
            <div class="ui red basic inverted button">
                <i class="remove icon"></i>
                No
            </div>
            <div id="removeAction" class="ui green basic inverted button">
                <i class="checkmark icon"></i>
                Yes
            </div>
        </div>
    </div>
</div>


