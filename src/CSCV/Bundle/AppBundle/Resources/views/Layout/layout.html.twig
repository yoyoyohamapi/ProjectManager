<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {% include "CSCVAppBundle:Layout:stylesheets.html.twig" %}
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% if noSideHeader is not defined %}
    {# 侧栏 #}
    <div id="sidebar" class="ui left vertical inverted labeled icon sidebar menu">
        <a class="item">
            <i class="home icon"></i>
            Home
        </a>
        <a class="item">
            <i class="block layout icon"></i>
            Topics
        </a>
        <a class="item">
            <i class="smile icon"></i>
            Friends
        </a>
        <a class="item">
            <i class="calendar icon"></i>
            History
        </a>
        <a class="item">
            <i class="mail icon"></i>
            Messages
        </a>
        <a class="item">
            <i class="chat icon"></i>
            Discussions
        </a>
        <a class="item">
            <i class="trophy icon"></i>
            Achievements
        </a>
        <a class="item">
            <i class="shop icon"></i>
            Store
        </a>
        <a class="item">
            <i class="settings icon"></i>
            Settings
        </a>
    </div>
    {# 侧栏启动项 #}
    <div id="sideLaunch" class="ui large fixed button">
        <i class="content icon"></i>
    </div>
    {# 顶栏 #}
    <div class="ui orange fixed inverted menu">
        <a class="active item">
            <i class="home icon"></i> Home
        </a>
        <a class="item">
            <i class="mail icon"></i> Messages
        </a>
        <a class="item">
            <i class="user icon"></i> Friends
        </a>
    </div>
{% endif %}

<div class="pusher">
    {% if noSideHeader is not defined %}
    <div id="mainContainer" style="padding-top:150px">
        {% else %}
        <div id="mainContainer">
            {% endif %}
        {% block content %}
        {% endblock %}
    </div>
</div>
{% if footer is defined %}
    {% include "CSCVAppBundle:Layout:footer.html.twig" %}
{% endif %}
</body>
{% block scripts %}
    {% include "CSCVAppBundle:Layout:scripts.html.twig" %}
{% endblock %}
</html>